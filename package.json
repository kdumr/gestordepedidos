{
  "name": "franguxo-gestor-pedidos",
  "version": "1.0.1",
  "description": "App Electron para acessar o Franguxo - Gestor de Pedidos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "nodemon --exec electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish always"
  },
  "author": "Franguxo Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "br.app.franguxo.gestor",
    "publish": [
      {
        "provider": "github",
        "owner": "kdumr",
        "repo": "gestordepedidos"
      }
    ],
    "productName": "Franguxo Gestor de Pedidos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "styles.css",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
